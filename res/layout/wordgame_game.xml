<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:padding="10dip"
    android:background="@color/wordgame_background" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

		<edu.neu.madcourse.dushyantdeshmukh.wordgame.BoardView 
		    android:id="@+id/wordgame_board_view"
		    android:layout_width="270dp"
            android:layout_height="350dp"
            android:paddingBottom="20dp"
            android:layout_gravity="center" />
        
		
		        <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		        
		        <Button
            android:id="@+id/wordgame_clear_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/wordgame_clear" />
		        <Button
            android:id="@+id/wordgame_currword_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="" />
		        <TextView
                    android:id="@+id/wordgame_currscore"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20sp"
                    android:text="@string/wordgame_currscore" />
		        </LinearLayout>

		         <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >
		        <Button
            android:id="@+id/wordgame_pause_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/wordgame_pause" />
        
        <Button
            android:id="@+id/wordgame_hint_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/wordgame_hint" />
        
        <Button
            android:id="@+id/wordgame_quit_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="@string/wordgame_quit" />
        </LinearLayout>

    </LinearLayout>

</ScrollView>